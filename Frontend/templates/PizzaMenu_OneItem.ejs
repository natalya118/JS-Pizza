<%

function getIngredientsArray(pizza) {
    //Отримує вміст піци
    var content = pizza.content;
    var result = [];

    //Object.keys повертає масив ключів в об’єкті JavaScript

    Object.keys(content).forEach(function(key){

        //a.concat(b) створює спільний масив із масивів a та b
        result = result.concat(content[key]);
    });

    return result;
}

   %>
<div class="col-md-6 col-lg-4 pizza-card">
    <div class="thumbnail">
        

        <% if(pizza.is_new) { %>
        <span class="label label-danger pizza-label-new">Нова</span>
        <% } else if(pizza.is_popular) {%>
        <span class="label label-success pizza-label-popular">Популярна</span>
        <% } 
<img class="pizza-icon" src="<%= pizza.icon %>" alt="Pizza">
        <div class="caption">
            <span class="title"><%= pizza.title %></span>
            <div class="type"><%= pizza.type %></div>
            <div class="description">
                <%= getIngredientsArray(pizza).join(", ") %>
            </div>
            
        </div>

        <div class="row">
        
        
        <!-- Перед тим щоб показати кнопку необхідно переконатися, що піца має великий розмір -->
<div class="col-sm-6 pizza-small">
    
        <% if(typeof pizza.small_size!== 'undefined') { %>

        <div>
            <img class= "ui right spaced avatar image" src="assets/images/size-icon.svg" >
        <span class="diam"><%= pizza.small_size.size %></span>
            </div>
    <div>
        <img class="ui right spaced avatar image" src="assets/images/weight.svg">
        <span class="weight"><%=pizza.small_size.weight %></span>
    </div>
    <h2><%=pizza.small_size.price %>
        <div>грн</div>
    </h2>
    
            <button class="btn btn-primary buy-small">Купити</button>
   
        <% } %>
    
            </div>
            <div class="col-sm-6 pizza-big">
    
        <% if(typeof pizza.big_size!== 'undefined') { %>
    <span>
         <div>
            <img src="assets/images/diam.jpeg" class="diamP">
        <span class="diam"><%= pizza.big_size.size %></span>
            </div>
        <div>
        <img class="ui right spaced avatar image" src="assets/images/weight.svg">
        <span class="weight"><%=pizza.big_size.weight %></span>
    </div>
    <h2><%=pizza.big_size.price %>
        <div>грн</div>
    </h2>
            <button class="btn btn-primary buy-big">Купити велику</button>
        </span>
        <% } %>
</div>
